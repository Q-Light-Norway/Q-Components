{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true, // Ensure this is true
    "declarationMap": true, // Ensure this is true
    "sourceMap": true,
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "src/App.tsx",
    "src/main.tsx",
    "src/Development"
  ]
}
